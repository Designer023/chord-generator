{
  "name": "chord-generator",
  "version": "0.0.1",
  "description": "Generates chords for a key",
  "main": "src/index.js",
  "files": [ 
      "src/**/*.js" 
  ],
  "author": "Carl Topham",
  "license": "MIT",
  "type": "module",
  "dependencies": {},
  "scripts": {
    "start": "node --experimental-modules src/index.js",
    "test": "jest --colors",
    "tidy": "prettier --write 'src/**/*.js'",
    "build": "babel ./src --out-dir ./dist --source-maps --copy-files --ignore '**/*.test.js'"
  },
  "devDependencies": {
    "@babel/plugin-transform-modules-commonjs": "^7.9.6",
    "@babel/preset-env": "^7.9.6",
    "@babel/cli": "7.8.4",
    "babel-jest": "^26.0.1",
    "babel-preset-env": "^1.7.0",
    "jest": "^26.0.1",
    "prettier": "2.0.5",
    "lint-staged": "^9.4.2",
    "husky": "^2.1.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && jest"
    }
  },
  "lint-staged": {
    "*.{js,jsx}": [
      "prettier --write",
      "git add"
    ]
  },
  "jest": {
    "collectCoverage": true,
    "collectCoverageFrom": [
      "src/**/*.js",
      "!<rootDir>/node_modules/"
    ],
    "transform": {
      "^.+\\.js?$": "babel-jest"
    },
    "coverageThreshold": {
      "global": {
        "branches": 90,
        "functions": 90,
        "lines": 90,
        "statements": 90
      }
    }
  }
}
