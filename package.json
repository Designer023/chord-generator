{
  "name": "@designer023/chord-generator",
  "version": "0.6.0",
  "description": "Generates chords for a key",
  "author": "Carl Topham",
  "license": "MIT",
  "dependencies": {},
  "main": "lib/index.js",
  "module": "lib/index.es.js",
  "type": "module",
  "files": [
    "lib"
  ],
  "scripts": {
    "start": "node --experimental-modules src/index.js",
    "test": "jest --colors",
    "tidy": "prettier --write 'src/**/*.js'",
    "build": "rollup -c",
    "prepare": "rollup -c"
  },
  "devDependencies": {
    "@babel/cli": "7.8.4",
    "@babel/plugin-transform-modules-commonjs": "^7.9.6",
    "@babel/preset-env": "^7.9.6",
    "@rollup/plugin-babel": "^5.0.0",
    "@rollup/plugin-node-resolve": "^7.1.3",
    "babel-jest": "^26.0.1",
    "babel-plugin-add-module-exports": "^1.0.2",
    "babel-preset-env": "^1.7.0",
    "husky": "^2.1.0",
    "jest": "^26.0.1",
    "lint-staged": "^9.4.2",
    "prettier": "2.0.5"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && jest"
    }
  },
  "lint-staged": {
    "*.{js,jsx}": [
      "prettier --write",
      "git add"
    ]
  },
  "publishConfig": {
    "directory": "dist"
  },
  "jest": {
    "collectCoverage": true,
    "collectCoverageFrom": [
      "src/**/*.js",
      "!node_modules/",
      "!vendor/",
      "!dist/",
      "!build/",
      "!coverage/"
    ],
    "testPathIgnorePatterns": [
      "dist"
    ],
    "transform": {
      "^.+\\.js?$": "babel-jest"
    },
    "coverageThreshold": {
      "global": {
        "branches": 90,
        "functions": 90,
        "lines": 90,
        "statements": 90
      }
    }
  }
}
