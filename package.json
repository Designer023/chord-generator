{
  "name": "chord-generator",
  "version": "0.2.0",
  "description": "Generates chords for a key",
  "main": "src/index.js",
  "files": [
    "**/*.*",
    "!**/*.stories.*",
    "!**/*.test.*"
  ],
  "author": "Carl Topham",
  "license": "MIT",
  "type": "module",
  "dependencies": {},
  "scripts": {
    "start": "node --experimental-modules src/index.js",
    "test": "jest --colors",
    "tidy": "prettier --write 'src/**/*.js'",
    "build": "babel ./src --out-dir ./dist --source-maps --copy-files --ignore '**/*.test.js'"
  },
  "devDependencies": {
    "@babel/cli": "7.8.4",
    "@babel/plugin-transform-modules-commonjs": "^7.9.6",
    "@babel/preset-env": "^7.9.6",
    "babel-jest": "^26.0.1",
    "babel-preset-env": "^1.7.0",
    "gulp": "^4.0.2",
    "gulp-babel": "^8.0.0",
    "gulp-clean": "^0.4.0",
    "gulp-rename": "^2.0.0",
    "husky": "^2.1.0",
    "jest": "^26.0.1",
    "lint-staged": "^9.4.2",
    "prettier": "2.0.5"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && jest"
    }
  },
  "lint-staged": {
    "*.{js,jsx}": [
      "prettier --write",
      "git add"
    ]
  },
  "publishConfig": {
    "directory": "dist"
  },
  "jest": {
    "collectCoverage": true,
    "collectCoverageFrom": [
      "src/**/*.js",
      "!node_modules/",
      "!vendor/",
      "!dist/",
      "!build/",
      "!coverage/"
    ],
    "testPathIgnorePatterns": [
      "dist"
    ],
    "transform": {
      "^.+\\.js?$": "babel-jest"
    },
    "coverageThreshold": {
      "global": {
        "branches": 90,
        "functions": 90,
        "lines": 90,
        "statements": 90
      }
    }
  }
}
